{
	"name": "pridolog",
	"description": "VSCode client for PrizmDoc logs support",
	"author": "Ilya Shestakov",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "ishestakov",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"icon": "images/fox.png",
	"categories": [
		"Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:prizmdoc-log"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "prizmdoc-log",
				"aliases": [
					"PrizmDoc-logs",
					"log",
					"pdlog"
				],
				"extensions": [
					".log"
				],
				"firstLine": "{.*(\"name\":\".*\")?.*(\"gid\":\".*\")?.*}",
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "prizmdoc-log",
				"scopeName": "text.log.prizmdoc",
				"path": "./syntaxes/log.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "pridolog configuration",
			"properties": {
				"pridolog.showLongOperations.enabled": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Turns on or off CodeLens for operations longer than some time."
				},
				"pridolog.showLongOperations.durationInMs": {
					"scope": "resource",
					"type": "number",
					"default": 1000
				}
			}
		},
		"commands":[
			{
				"command": "pridolog.operationDuration",
				"title": "Show operation duration",
				"category": "pridolog"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2"
	}
}
